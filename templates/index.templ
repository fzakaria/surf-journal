package templates

templ IndexPage(username string) {
  @Layout("Home", _IndexPage(username))
}

templ _IndexPage(username string) {
  <div class="bg-white shadow rounded-lg px-8 py-6">
    <h2 class="text-2xl mb-4">Hello, {username}!</h2>
    <button hx-post="/logout" class="px-4 py-2 bg-red-500 text-white rounded">
      Logout
    </button>
  </div>
}